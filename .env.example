# Drata Kong Tests - Environment Variables
# Copy to .env and fill in values

# Kong Konnect Configuration
KONNECT_TOKEN=kpat_your_token_here
KONNECT_REGION=us
CONTROL_PLANE_NAME=kong-hybrid-rate-limit-demo

# Kong Dataplane
DATAPLANE_URL=https://kong-dataplane-xxx.run.app

# API Keys (from your Kong setup)
FREE_TRIAL_KEY=free-trial-key
PRO_KEY=pro-key

# Drata API
DRATA_API_KEY=your_drata_api_key
DRATA_API_BASE=https://public-api.drata.com

# GCP (for deployment)
GCP_PROJECT_ID=drata-kong-tests
GCP_REGION=us-east1

# Optional
DRY_RUN=false
VERBOSE=false
